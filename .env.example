# AI Academician Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API Key (for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google API Keys
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_google_custom_search_engine_id_here

# HuggingFace API Key (optional, for HF Inference API)
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# Default LLM Provider (openai, gemini, claude, huggingface)
DEFAULT_LLM_PROVIDER=gemini

# Default Model per Provider
OPENAI_MODEL=gpt-4-turbo-preview
GEMINI_MODEL=gemini-pro
CLAUDE_MODEL=claude-3-opus-20240229
HUGGINGFACE_MODEL=mistralai/Mixtral-8x7B-Instruct-v0.1

# Paper Generation Settings
DEFAULT_WORD_COUNT=18000
DEFAULT_CITATION_STYLE=APA
MAX_SOURCES=30
MIN_SOURCES=20

# Review Settings
MIN_REVIEW_CYCLES=2
MAX_REVIEW_CYCLES=5

# Storage
DATABASE_PATH=./data/ai_academician.db
OUTPUT_DIR=./output
